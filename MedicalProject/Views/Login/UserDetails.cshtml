@model System.Data.DataTable
@{
    ViewBag.Title = "User Details";
}

            <h2 style="text-align:center">List Of User</h2>


            @using (Html.BeginForm("UserDetails", "Login", FormMethod.Post))
            {
                <div class="form-group">
                    <div style="margin-top:-10px; margin-left:650px;">
                        <input type="submit" value="Delete All" class="btn btn-danger" onclick="return confirm('Are you sure?')" />
                        <input type="button" value="Add Method" class="btn btn-success" onclick="location.href='@Url.Action("RegistrationForm","Login")'" />
                    </div>


                </div>
                

                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Select</th>
                        <th> Name </th>
                        <th>User Name </th>
                        <th>Password</th>
                        <th>Created Date</th>
                        <th>Updated Date</th>



                    </tr>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>

                            <td><input type="checkbox" name="checks" id="checks" value="@Model.Rows[i][0]" /></td>


                            <td>@Model.Rows[i][1]</td>
                            <td>@Model.Rows[i][2]</td>
                            <td>@Model.Rows[i][3]</td>
                            <td>@Model.Rows[i][4]</td>
                            <td>@Model.Rows[i][5]</td>


                            <td>

                                <a href="@Url.Action("LoginUpdate","Login", new {@id=Model.Rows[i][0]})" class="btn btn-sm btn-warning" onclick="return confirm ('Are you sure want to Update blog?');">
                                    <i class="glyphicon glyphicon-remove"></i> Update
                                </a>
                                <a href="@Url.Action("UserDelete","Login", new {@id=Model.Rows[i][0]})" class="btn btn-sm btn-danger" onclick="return confirm ('Are you sure want to delete blog?');">
                                    <i class="glyphicon glyphicon-remove"></i> Delete
                                </a>


                            </td>


                        </tr>
                    }



                </table>

            }



    