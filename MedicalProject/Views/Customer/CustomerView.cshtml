@model System.Data.DataTable
@{
    ViewBag.Title = "CustomerView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("_SideLayout");
}
<div class="container">
    <div class="content-container">



        <div class="container-fluid">

            <h2 style="text-align:center">List Of Customer</h2>





            @using (Html.BeginForm("CustomerView", "Customer", FormMethod.Post))
            {
                <div class="form-group">
                    <div style="margin-top:-10px; margin-left:650px;">
                        <input type="submit" value="Delete All" class="btn btn-danger" onclick="return confirm('Are you sure?')" />
                        <input type="button" value="Add Customer" class="btn btn-success" onclick="location.href='@Url.Action("CustomerInsert","Customer")'" />
                    </div>


                </div>
               


                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Select</th>
                        <th>Name </th>
                        <th>Address</th>
                        <th>PIN Code</th>
                        <th>Phone No</th>
                        <th>Email</th>



                    </tr>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>

                            <td><input type="checkbox" name="checks" id="checks" value="@Model.Rows[i][0]" /></td>


                            <td>@Model.Rows[i][1]</td>
                            <td>@Model.Rows[i][2]</td>
                            <td>@Model.Rows[i][3]</td>
                            <td>@Model.Rows[i][4]</td>
                            <td>@Model.Rows[i][5]</td>



                            <td>

                                <a href="@Url.Action("CustomerUpdate","Customer", new {@id=Model.Rows[i][0]})" class="btn btn-sm btn-warning" onclick="return confirm ('Are you sure want to Update blog?');">
                                    <i class="glyphicon glyphicon-remove">   </i> Update
                                </a>

                                &nbsp; <a href="@Url.Action("CustomerDelete","Customer", new {@id=Model.Rows[i][0]})" class="btn btn-sm btn-danger" onclick="return confirm ('Are you sure want to delete blog?');">
                                    <i class="glyphicon glyphicon-remove"></i>    Delete
                                </a>


                            </td>


                        </tr>
                    }



                </table>

            }



        </div>
    </div>
</div>
<style>
    .content-container {
        padding-top: 20px;
    }

    .content-container {
        padding-left: 220px;
    }
</style>