                                            </div>
                                        </div>

                                        <h1>@Html.ViewData["Message2"]</h1>



                                    </div>


                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "CategoryView")
            </div>

        </div>

    </div>
    </div>
    <style>
        .content-container {
            padding-top: 20px;
        }

        .content-container {
