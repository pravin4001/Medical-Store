@model MedicalProject.Models.Category

@{
    ViewBag.Title = "CategoryView";

}

@{
    Html.RenderPartial("_SideLayout");
}
<div class="container">
    <div class="content-container">



        <div class="container-fluid">

            <h2></h2>

            @using (Html.BeginForm())
            {
                <div class="container-fluid" style="padding-left:0px; margin-top:80px; margin-left:00px;">
