                                            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-lg-md-4 col-md-3" })
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
