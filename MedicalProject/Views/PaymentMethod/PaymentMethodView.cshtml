@model System.Data.DataTable
@{
    ViewBag.Title = "PaymentMethodView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Html.RenderPartial("_SideLayout");
}
<div class="container">
    <div class="content-container">



        <div class="container-fluid">


            <h2 style="text-align:center">List Of Payment Method</h2>




            @using (Html.BeginForm("PaymentMethodView", "PaymentMethod", FormMethod.Post))
            {
                <div class="form-group">
                    <div style="margin-top:-10px; margin-left:650px;">
                        <input type="submit" value="Delete All" class="btn btn-danger" onclick="return confirm('Are you sure?')" />
                        <input type="button" value="Add Method" class="btn btn-success" onclick="location.href='@Url.Action("PaymentMethodInsert","PaymentMethod")'" />
                    </div>


                </div>
               

                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Select</th>
                        <th> Name</th>





                    </tr>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>

                            <td><input type="checkbox" name="checks" id="checks" value="@Model.Rows[i][0]" /></td>

                            @*<td>@Model.Rows[i][0]</td>*@
                            <td>@Model.Rows[i][1]</td>



                            <td>

                                <a href="@Url.Action("PaymentMethodUpdate","PaymentMethod", new {@id=Model.Rows[i][0]})" class="btn btn-sm btn-warning" onclick="return confirm ('Are you sure want to Update blog?');">
                                    <i class="glyphicon glyphicon-remove">   </i> Update
                                </a>

                                &nbsp; <a href="@Url.Action("PaymentMethodDelete","PaymentMethod", new {@id=Model.Rows[i][0]})" class="btn btn-sm btn-danger" onclick="return confirm ('Are you sure want to delete blog?');">
                                    <i class="glyphicon glyphicon-remove"></i>    Delete
                                </a>



                            </td>


                        </tr>
                    }



                </table>

            }
            @*<p><a href="@Url.Action("PaymentMethodInsert","PaymentMethod")">Add PaymentMethod</a></p>*@


        </div>



    </div>
</div>
<style>
    .content-container {
        padding-top: 20px;
    }

    .content-container {
        padding-left: 220px;
    }
</style>

